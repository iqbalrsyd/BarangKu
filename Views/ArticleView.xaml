                        <Image Source="/Assets/artikel1.jpg"
                       Height="150"
                       Stretch="UniformToFill"
                       Margin="5"/>
                        <TextBlock Text="Berita OOTD Terkini Dan Terbaru Hari Ini"
                           FontWeight="Bold"
                           FontSize="14"
                           Margin="10,5,10,0"
                           TextWrapping="Wrap"/>
                        <TextBlock Text="Okezone.com - Berita OOTD Terkini Dan ..."
                           FontSize="12"
                           Margin="10,5,10,0"
                           TextWrapping="Wrap"/>
                        <TextBlock Text="Selengkapnya"
                           FontSize="12"
                           Foreground="Gray"
                           Margin="10,5,10,5"
                           TextWrapping="Wrap"/>
